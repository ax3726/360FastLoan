<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/order_icon_3" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/image_01"
        android:background="#e2e5e9" />

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/view_line"
        android:text="秒借款"
        android:textColor="#1e3751"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_01"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/view_line"
        android:text="3-5万"
        android:textColor="#ff2c59"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_02"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/view_line"
        android:text="可借额度"
        android:textColor="#e2e5e9"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_03"
        android:layout_centerHorizontal="true"
        android:text="0.60%"
        android:textColor="#ff2c59"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_04"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_03"
        android:text="可借额度"
        android:textColor="#e2e5e9"
        android:textSize="10sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="376px"
        android:layout_height="2px"
        android:layout_below="@id/tv_05"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/view_line"
        android:background="#ff2c59" />
    <TextView
        android:id="@id/tv_06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_05"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/progressbar"
        android:text="500万申请"
        android:textColor="#e2e5e9"
        android:textSize="10sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="130px"
        android:layout_height="38px"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_01"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/grid_shap_two"
        android:text="申请退款"
        android:textColor="@color/colorText"
        android:textSize="10sp" />

</RelativeLayout>